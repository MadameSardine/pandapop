<h1>Top tracks</h1>

<% if current_user %>

<section class='track-box'>
  <h1>Playlists</h1>
</section>

<section class='track-box'>
  <h1>Followers</h1>
</section>

<section class='playlists-box'>
  <h1>Playlists</h1>
  <%= link_to 'New playlist', new_user_playlist_path(current_user) %>
  <article class='playlists'>
    <ul>
      <% current_user.playlists.each do |playlist| %>
      <li><%= link_to playlist.name, user_playlist_path(current_user, playlist) %></li>
      <% end %>
    </ul>
  </article>
</section>

<% else %>

<section class='track-box'>
There are the top tracks yaaaayyyyy
</section>

<% end %>

<a href='#'>Play track</a>