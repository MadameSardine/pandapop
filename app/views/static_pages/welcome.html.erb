<% if user_signed_in? %>
  <section class='playlists-box'>
    <h1>Playlists</h1>
    <%= link_to 'Add your own song to a playlist', new_track_path %>
    <br>
    <%= link_to 'Create playlist', new_playlist_path %>
    <article class='playlists'>
      <ul>
        <% current_user.playlists.each do |playlist| %>
        <li><%= link_to playlist.name, playlist_path(playlist) %></li>
        <% end %>
      </ul>
    </article>
  </section>
<% else %>
<% end %>

