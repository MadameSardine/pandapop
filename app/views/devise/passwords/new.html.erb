<article class="pink-ribbon">
  <h2>Forgot your password?</h2>
</article>

<article id='devise-edit-page'>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="devise-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true , :class => 'devise-input' %>
    </div>

    <div class="devise-actions">
      <%= f.submit "Reset password" , :class => 'devise-submit'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</article>
